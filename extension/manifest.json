{

  "manifest_version": 3,
  "name": "screenaudio-mic",
  "version": "0.0.1",

  "description": "Passthrough pipewire audio to WebRTC screenshare",

  "browser_specific_settings": {
    "gecko": {
      "id": "screenaudio-mic@icedborn"
    }
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "64": "icons/icon.svg"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],

  "permissions": [
    "nativeMessaging"
  ]

}
