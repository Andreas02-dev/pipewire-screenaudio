{

  "manifest_version": 3,
  "name": "screenaudio-mic",
  "version": "1.0",

  "description": "Passthrough pipewire audio to WebRTC screenshare",

  "browser_specific_settings": {
    "gecko": {
      "id": "screenaudio-mic@icedborn"
    }
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "48": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "nativeMessaging"
  ]

}
